<h1>Eat-Da Burger!</h1>

<h2>Fresh Burger!</h2>
<ul>
  {{#each burger}}
    {{#unless eaten}}
      {{> burgers/burger-block sleep=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten burger!</h2>

<ul>
  {{#each burger}}
    {{#if eaten}}
      {{> burgers/burger-block sleep=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>New Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Submit</button>
</form>
